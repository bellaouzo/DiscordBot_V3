{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "paths": {
      "@commands": ["Commands/index"],
      "@commands/*": ["Commands/*"],
      "@middleware": ["Commands/Middleware/index"],
      "@middleware/*": ["Commands/Middleware/*"],
      "@bot": ["Bot/index"],
      "@bot/*": ["Bot/*"],
      "@database": ["Database/index"],
      "@database/*": ["Database/*"],
      "@utilities": ["Utilities/index"],
      "@utilities/*": ["Utilities/*"],
      "@shared": ["Shared/index"],
      "@shared/*": ["Shared/*"],
      "@responders": ["Responders/index"],
      "@responders/*": ["Responders/*"],
      "@events": ["Events/index"],
      "@events/*": ["Events/*"],
      "@config": ["Config/AppConfig"],
      "@config/*": ["Config/*"],
      "events": ["../node_modules/@types/node/events"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
